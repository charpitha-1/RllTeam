@using FoodieMVC.DTO
@model List<OrderDetailsDTO>

<h2>Discounted Orders</h2>

    <table border="1" cellpadding="5">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>User ID</th>
                <th>Order Date</th>
                <th>Order Total</th>
                <th>Discount</th>
                <th>GST</th>
                <th>Final Amount</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.orderId</td>
                <td>@order.userId</td>
                <td>@order.orderDate.ToShortDateString()</td>
                <td>@order.orderTotal.ToString("C")</td>
                <td>@order.discount.ToString("C")</td>
                <td>@order.gst.ToString("C")</td>
                <td>@order.finalAmount.ToString("C")</td>
            </tr>
        }
        </tbody>
    </table>
}
