@using FoodappMVC.DTO
@model List<OrderDetailsDTO>
@{
    ViewData["Title"] = "All Orders";
}

<h2>All Orders</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">@TempData["Message"]</div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Date</th>
            <th>Status</th>
            <th>Total</th>
            <th>Final Amount</th>
            <th>Delivered By</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.OrderDate.ToString("g")</td>
                <td>@order.OrderStatus</td>
                <td>@order.OrderTotal</td>
                <td>@order.FinalAmount</td>
                <td>@order.DeliveredBy</td>
                <td>
                    <a asp-action="EditOrder" asp-route-id="@order.OrderId" class="btn btn-warning">Edit</a>
                    <form asp-action="DeleteOrder" method="post" asp-route-orderId="@order.OrderId" style="display:inline">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this order?');">
                            Delete
                        </button>
                    </form>

                </td>
                

            </tr>
        }
    </tbody>
</table>
