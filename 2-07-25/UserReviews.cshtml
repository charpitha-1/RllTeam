@model List<FoodieMVC.DTO.ReviewDTO>

@{
    ViewData["Title"] = "User Reviews";
}

<h2 class="mb-4">User Reviews</h2>

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-info">@ViewBag.Message</div>
}

@if (Model != null && Model.Count > 0)
{
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Review ID</th>
                <th>Rating</th>
                <th>Date</th>
                <th>Comments</th>
                <th>Order ID</th>
                <th>Food Item ID</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var review in Model)
            {
                <tr>
                    <td>@review.reviewId</td>
                    <td>@review.rating</td>
                    <td>@review.createdAt.ToString("dd MMM yyyy")</td>
                    <td>@review.comments</td>
                    <td>@review.orderId</td>
                    <td>@review.foodItemId</td>
                </tr>
            }
        </tbody>
    </table>
}
else if (string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="text-muted">No reviews to display.</div>
}
