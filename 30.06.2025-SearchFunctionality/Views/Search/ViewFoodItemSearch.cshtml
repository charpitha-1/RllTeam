
@model FoodMVC1.DTO.Search

<h2>All Food Items</h2>

@if (Model.FoodItems != null && Model.FoodItems.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Restaurant</th>
                <th>City</th>
                <th>Area</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.FoodItems)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@item.RestaurantName</td>
                    <td>@item.City</td>
                    <td>@item.Area</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No food items found.</p>
}

