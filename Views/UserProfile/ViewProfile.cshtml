@using FoodieMVC.DTO;
@model List<UserDTO>

<h2>User Profiles</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>User Id</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Password</th>
            <th>Phone Number</th>
            <th>User Role</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.userId</td>
                <td>@user.firstName</td>
                <td>@user.lastName</td>
                <td>@user.email</td>
                <td>@user.password</td>
                <td>@user.phoneNumber</td>
                <td>@user.userRole</td>
            </tr>
        }
    </tbody>
</table>
