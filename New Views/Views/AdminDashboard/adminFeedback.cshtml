
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Feedback & Ratings | Admin</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Bootstrap + Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f4f6f8;
        }

        .card-header {
            background: #6c757d;
            color: white;
        }

        .review-card {
            border-left: 5px solid #0d6efd;
            transition: 0.3s;
        }

            .review-card:hover {
                transform: scale(1.01);
            }

        .action-icons i {
            cursor: pointer;
            margin-right: 12px;
        }
    </style>
</head>
<body>

    <div class="container-fluid p-4">
        <h2 class="text-center fw-bold text-secondary mb-4">📝 Review & Rating Manager</h2>

        <!-- 🔍 Filter Reviews -->
        <div class="card shadow-sm mb-3">
            <div class="card-body d-flex flex-wrap align-items-center">
                <select class="form-select form-select-sm w-auto me-2 mb-2" id="filterReviewRestaurant">
                    <option selected disabled>Filter by Restaurant</option>
                    <option value="1">Spicy Tandoori</option>
                    <option value="2">Pizza Castle</option>
                </select>
                <select class="form-select form-select-sm w-auto me-2 mb-2" id="filterReviewUser">
                    <option selected disabled>Filter by User</option>
                    <option value="1">Ravi Kumar</option>
                    <option value="2">Divya Patel</option>
                </select>
                <button class="btn btn-sm btn-secondary mb-2" onclick="applyReviewFilters()">Apply</button>
                <button class="btn btn-sm btn-outline-secondary mb-2" onclick="clearReviewFilters()">Reset</button>
            </div>
        </div>

        <!-- 🌟 Reviews List -->
        <div class="row" id="reviewsContainer">
            <!-- Reviews inserted here dynamically -->
        </div>
    </div>

    <!-- 💬 Full Review Modal -->
    <div class="modal fade" id="fullReviewModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header bg-secondary text-white">
                    <h5 class="modal-title">Full Review</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body" id="fullReviewBody">
                    <!-- Filled via JS -->
                </div>
            </div>
        </div>
    </div>

    <!-- 🚫 Delete Review Confirmation Modal -->
    <div class="modal fade" id="deleteReviewModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title">Delete Review</h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this review? This action cannot be undone.
                </div>
                <div class="modal-footer">
                    <button class="btn btn-danger" id="confirmDeleteReviewBtn">Yes, Delete</button>
                    <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>

    <!-- ✅ Toast -->
    <div id="toastWrapper" class="toast align-items-center position-fixed bottom-0 end-0 m-4 text-white bg-success" style="display:none; z-index:999;">
        <div class="d-flex">
            <div class="toast-body" id="toastMsg">Feedback updated</div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" onclick="document.getElementById('toastWrapper').style.display='none'"></button>
        </div>
    </div>

    <!-- Bootstrap + JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/Admin.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
          renderReviews();
        });
    </script>

</body>
</html>
